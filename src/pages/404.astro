---
import Layout from "../layouts/Layout.astro";
import NotFound from "../components/shared/react/NotFound";
---

<Layout title="Not Found">
  <div class="flex flex-col w-full items-center gap-4">
    <NotFound client:load />
    <h2 class="text-zinc-200 font-bold text-xl flex">404: Page Not Found</h2>
    <p class="text-zinc-300 text-sm">
      The requested page is unavailable or may have been moved. Please check the
      URL or go back to the homepage.
    </p>
  </div>
</Layout>
