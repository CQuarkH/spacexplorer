---
import ExploreItem from "../components/ExploreItem.astro";
import CustomIcon from "../components/shared/CustomIcon.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="SpaceXplorer" customID="flex flex-col m-0 p-0 top-201">
  <div class="relative min-h-screen">
    <div
      class="absolute inset-0 w-full h-screen bg-[url('/images/bg-spacex.jpg')] bg-no-repeat bg-cover"
    >
    </div>
    <div class="absolute inset-0 w-full h-screen bg-black opacity-60"></div>
    <div
      class="relative h-screen flex flex-col justify-center items-center z-10 p-8"
    >
      <div class="flex flex-col gap-8 items-center">
        <h1 class="text-zinc-200 text-3xl font-bold fade-in">
          Navigate the stars
        </h1>
        <div class="flex flex-col md:items-center gap-3 fade-in">
          <h3 class="text-white">
            Dive into the world of space exploration with the latest on
            vehicles, launches, and launchpads.
          </h3>
        </div>
      </div>
    </div>
  </div>

  <div class="container flex flex-col mx-auto p-8 gap-8">
    <div class="w-full flex flex-col gap-4">
      <h2 class="text-xl text-zinc-300 font-bold">About SpaceX</h2>
      <div class="grid gap-4 grid-cols-1 md:grid-cols-4">
        <div
          class="bg-black p-4 rounded-md flex flex-col gap-4 justify-between slide-in"
        >
          <h3 class="text-zinc-400 text-lg">Founded</h3>
          <h3 class="text-zinc-300 text-2xl font-bold">2002</h3>
        </div>
        <div
          class="bg-black p-4 rounded-md flex flex-col gap-4 justify-between slide-in"
        >
          <h3 class="text-zinc-400 text-lg">Vehicles</h3>
          <h3 class="text-zinc-300 text-2xl font-bold">4</h3>
        </div>
        <div
          class="bg-black p-4 rounded-md flex flex-col gap-4 justify-between slide-in"
        >
          <h3 class="text-zinc-400 text-lg">Launches</h3>
          <h3 class="text-zinc-300 text-2xl font-bold">+6000</h3>
        </div>
        <div
          class="bg-black p-4 rounded-md flex flex-col gap-4 justify-between slide-in"
        >
          <p class="text-zinc-400 text-lg">Most launches in a year record</p>
          <h3 class="text-zinc-300 text-2xl font-bold">61 (2022)</h3>
        </div>
      </div>
    </div>
  </div>
  <div class="w-full bg-black p-6 flex flex-col gap-8">
    <h2 class="text-zinc-200 font-bold text-xl">Explore</h2>
    <div class="grid gap-4 md:grid-cols-3 grid-cols-1">
      <ExploreItem
        imageUrl="/images/launches.webp"
        title="Launches"
        href="/launches"
      />
      <ExploreItem
        imageUrl="/images/vehicles.webp"
        title="Vehicles"
        href="/vehicles"
      />
      <ExploreItem
        imageUrl="/images/launchpads.webp"
        title="Launchpads"
        href="/launchpads"
      />
    </div>
  </div>
</Layout>

<style>
  .fade-in {
    animation: fadeIn 2.5s ease forwards;
  }

  .slide-in {
    animation: slideIn 2.5s ease forwards;
    animation-timeline: view();
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideIn {
    0% {
      opacity: 0;
      transform: translateX(-30px);
    }
    50% {
      opacity: 1;
      transform: translateX(-5px);
    }
  }
</style>
