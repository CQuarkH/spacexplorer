---
interface Props {
  title: string;
  value: string | number;
  unit?: string;
  colorClass?: string;
}

const {
  title,
  value,
  unit = "",
  colorClass = "text-zinc-300",
} = Astro.props as Props;
---

<span class="flex gap-2 items-center justify-between">
  <h3 class="text-zinc-400">{title}:</h3>
  <h3 class={`${colorClass} text-sm text-right`}>
    {value}
    {unit}
  </h3>
</span>
