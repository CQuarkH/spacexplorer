---
import { youtubeToEmbeddedLink } from "../../common/utils";
interface Props {
  videoID: string | null;
  images: string[];
}

const { videoID, images } = Astro.props as Props;
console.log(videoID);
---

<div class="[grid-area:media] rounded-lg p-2 flex flex-col gap-4">
  <h2 class="text-xl text-zinc-200 font-bold">Media Gallery</h2>

  {
    !videoID && images.length == 0 ? (
      <p class="text-zinc-400"> Media not available </p>
    ) : (
      <>
        {videoID && (
          <div style="position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden;">
            <iframe
              class="rounded-md"
              style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"
              src={`https://www.youtube.com/embed/${videoID}`}
              title="YouTube video player"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            />
          </div>
        )}

        {images.length > 0 && (
          <div class="grid h-[200px] w-full">
            {images.map((img) => (
              <img src={img} />
            ))}
          </div>
        )}
      </>
    )
  }
</div>
